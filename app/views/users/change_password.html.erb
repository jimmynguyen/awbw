<div class="printable-area p-6 bg-white rounded-lg shadow-md max-w-md mx-auto">
  <h2 class="text-xl font-semibold mb-4">Change your current password</h2>

  <%= simple_form_for :user, url: update_password_path, method: :post, html: { class: "space-y-4" } do |f| %>

    <div class="flex flex-col">
      <%= f.label :current_password, required: true,
                  class: "text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :current_password, required: true,
                           class: "rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password, "New Password *", required: true,
                  class: "text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, required: true,
                           class: "rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
    </div>

    <div class="flex flex-col">
      <%= f.label :password_confirmation, required: true,
                  class: "text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, required: true,
                           class: "rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2" %>
    </div>

    <div class="mt-4 text-center">
      <%= f.submit 'Change Password', class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
