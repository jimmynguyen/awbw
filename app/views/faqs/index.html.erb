<div class="col-md-12">
  <div class="row">
    <div class="col-md-9 col-lg-8 width">
      <div class="entry-content">
        <h2 class="normal"><%= Faq.model_name.human.pluralize %></h2>
      </div>
    </div>
    <div class="col-md-3 col-lg-4 width">
      <div class="entry-content">
        <%= link_to 'New ' + Faq.model_name.human, new_faq_path, class: "btn btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>

<div class="col-md-12">
  <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <% attributes = @faqs.first.attributes.keys if @faqs.any? %>
        <% attributes&.each do |attribute| %>
          <th><%= attribute.humanize %></th>
        <% end %>
        <th>Edit</th>
      </tr>
    </thead>

    <tbody>
      <% @faqs.each do |faq| %>
        <tr>
          <% attributes.each do |attribute| %>
            <td><%= faq[attribute] %></td>
          <% end %>
          <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-center">
    <%= will_paginate @faqs, :previous_label => '<<', :next_label => '>>', :inner_window => 2 %>
  </div>
</div>
