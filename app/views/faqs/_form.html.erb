<%= simple_form_for(@faq) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row">
    <% @faq.attribute_names.reject { |a| ["id", "created_at", "updated_at"].include?(a) }.each do |attr| %>
      <div class="col-md-6 mb-3">
        <%= f.input attr.to_sym, input_html: { class: "form-control" } %>
      </div>
    <% end %>
  </div>

  <div class="form-actions mt-3">
    <% if @faq.persisted? && current_user.super_user? %>
      <%= link_to "Delete", @faq, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
    <% end %>
    <%= link_to "Cancel", faqs_path, class: "btn btn-outline-secondary" %>
    <%= f.button :submit, class: "btn btn-outline-primary ms-2" %>
  </div>
<% end %>
