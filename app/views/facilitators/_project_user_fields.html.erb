<div class="nested-fields rounded-lg border border-gray-200 bg-gray-50 p-4 mb-4 shadow-sm">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= f.input :project_id,
                  as: :select,
                  label: "Organization",
                  collection: @projects_array,
                  selected: f.object.project_id,
                  input_html: {
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                  },
                  label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>
    </div>

    <div>
      <%= f.input :position,
                  as: :select,
                  label: "Role",
                  collection: ProjectUser.positions.keys.map { |k| [k.humanize, k] },
                  selected: f.object.position.presence || "default",
                  include_blank: true,
                  input_html: {
                    class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                  },
                  label_html: { class: "block text-sm font-medium text-gray-700 mb-1" } %>

    </div>

    <div class="flex justify-between items-center mt-3 mb-3">
      <%= link_to_remove_association "âœ– Remove",
                                     f,
                                     class: "text-sm text-red-600 hover:text-red-800 underline" %>
    </div>
  </div>
</div>
